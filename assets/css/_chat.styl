.chatContainer
  height: 100%
  display: flex
  flex-direction: column
  &_messageList
    flex: 1
    padding: 1rem
    overflow-x: scroll
    &_message
      color: #fff
      width: 260px
      max-width: 60%
      display: table
      padding: 1rem
      font-size: 1.4rem
      margin-bottom: 1rem
      border-radius: .8rem
      background-color: rgb(36, 0, 255)
      &_name
        opacity: .6
        margin-bottom: .4rem
      &_body
        font-style: italic
  &_messageForm
    padding: 1rem
    display: flex
    flex-direction: row
    background-color: #ccc
    > *
      margin: .8rem
    .nameInput
      max-width: 200px
